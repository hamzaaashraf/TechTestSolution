@model TechTest.Models.Item

@{
    ViewBag.Title = "Delete Item";
}

<div class="container mt-5">
    <div class="card shadow">
        <div class="card-header bg-danger text-white">
            <h4 class="mb-0">Delete Item</h4>
        </div>
        <div class="card-body">
            <p>Are you sure you want to delete this item?</p>
            <dl class="row">
                <dt class="col-sm-3">ID</dt>
                <dd class="col-sm-9">@Model.Id</dd>

                <dt class="col-sm-3">Name</dt>
                <dd class="col-sm-9">@Model.Name</dd>

                <dt class="col-sm-3">Description</dt>
                <dd class="col-sm-9">@Model.Description</dd>

                <dt class="col-sm-3">Price</dt>
                <dd class="col-sm-9">@Model.Price</dd>

                <dt class="col-sm-3">Status</dt>
                <dd class="col-sm-9">
                    @if (!Model.IsActive)
                    {
                        <span class="badge bg-danger">Inactive</span>
                    }
                    else
                    {
                        <span class="badge bg-success">Active</span>
                    }
                </dd>
            </dl>

            @using (Html.BeginForm("DeleteConfirmed", "Item", FormMethod.Post))
            {
                @Html.AntiForgeryToken() <!-- This adds the anti-forgery token to the form -->
                @Html.HiddenFor(model => model.Id)
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash"></i> Confirm Delete
                </button>
                <a href="@Url.Action("Index", "Item")" class="btn btn-secondary">
                    <i class="bi bi-arrow-left-circle"></i> Cancel
                </a>
            }
        </div>
    </div>
</div>
